@import "semantic-ui";

body {

  background: url(<%= asset_path 'basketball-court-medium.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  text-align: center;

}

i.play-button {

  color: #FFF;
  font-size: 10em;
  opacity: 1;
  cursor: pointer;

  position: fixed;
  top: 45%;
  left: 50%;
  -ms-transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);

}

.hidden {

  display: none;

}

.media-player {

  position: fixed;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);

}

.signup {

  position: fixed;
  top: 85%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  width: 100%;
  max-width: 60%;

}

input[type="text"] {

  font-size: 18px;
  font-weight: bold;
  padding: 10px 8px 10px 8px;
  opacity: 0.85;
  width: 60%;
  text-align: center;

}

input[type="submit"] {

  appearance: none;
  -webkit-appearance: none;
  font-size: 18px;
  opacity: .99;
  width: 35%;
  background: #08C;
  box-shadow: inset 0 1px 2px rgba(255,255,255, .35), 0px 1px 6px rgba(0,246,255,.5);
  padding: 10px 8px 10px 8px;
  border: 1px solid #0a5378;
  color: #eee;
  cursor: pointer;
  text-shadow:0px -1px 0px rgba(0,0,0,.5);

}

input[type="text"]:hover, input[type="text"]:focus {
  color: #08C;
  border: 1px solid #08C;
  box-shadow: 0px 1px 0px rgba(255,255,255,.25),inset 0px 3px 6px rgba(0,0,0,.25);  
}

